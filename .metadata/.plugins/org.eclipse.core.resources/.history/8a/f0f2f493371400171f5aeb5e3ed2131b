$(document).ready(function(){
	$("#saveLogin").validate({
		rules:{
			"username":{
				required:true,
				minlength:6,
				maxlength:40
			}
		},
	messages: {
			"username":{
				required:"Username không bỏ trống"
			}
		},
	submitHandler :function(form){
		alert('valid form');
	}
	});
});